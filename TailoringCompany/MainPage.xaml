<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TailoringCompany.ViewModels"
             x:Class="TailoringCompany.MainPage"
             xmlns:local="clr-namespace:TailoringCompany"
             BackgroundColor="Black">

    <Grid RowDefinitions="*, Auto">
        <VerticalStackLayout Grid.Row="0"
                            VerticalOptions="Center"
                            Spacing="20">
            <Label Text="Alina Fashion"
                   TextColor="White"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="1"
                            Spacing="15"
                            Margin="20,0,20,30">
            <Button Text="Already Have An Account?"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="16"
                    HeightRequest="50"
                    CornerRadius="25" />

            <Button Text="Create New Account"
                    Command="{Binding RegisterCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="16"
                    HeightRequest="50"
                    BorderColor="White"
                    BorderWidth="1"
                    CornerRadius="25" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>